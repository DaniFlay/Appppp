<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformeGuardia"
    android:orientation="vertical"
    android:background="@color/janna">
    <ImageView
        android:id="@+id/iconoColegio"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/icono"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/docente"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/iconoColegio"
        android:id="@+id/docente">

    </TextView>
    <EditText
        android:id="@+id/nombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="17"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/docente">

    </EditText>
    <ImageButton
        android:id="@+id/botonAÃ±adir"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@android:drawable/ic_menu_add"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/imageButton"
        android:layout_toEndOf="@+id/nombre"
        android:layout_below="@+id/docente">
    </ImageButton>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fecha"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:id="@+id/fechaText"
        android:layout_below="@+id/nombre">

    </TextView>
        <EditText
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:ems="5"
            android:layout_below="@+id/fechaText">
        </EditText>
        <ImageButton
            android:id="@+id/botonFecha"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/imageButton"
            android:layout_below="@+id/fechaText"
            android:layout_toEndOf="@+id/fecha">
        </ImageButton>

    <TextView
        android:id="@+id/observacionesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/observaciones"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/fecha">

    </TextView>
    <EditText
        android:layout_below="@+id/observacionesText"
        android:id="@+id/observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:scrollbars="vertical"
        android:lines="4"
        android:inputType="textMultiLine">
    </EditText>
    <Button
        android:layout_below="@+id/observaciones"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/boton_guardar"
        android:backgroundTint="@color/boton"
        android:textColor="@color/white"
        android:text="@string/guardar">

    </Button>
</RelativeLayout>