<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ausencias"
        android:orientation="vertical"
        android:background="@color/janna">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp">

        </TextView>
        <EditText
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="17"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apellidos"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        </TextView>
        <EditText
            android:id="@+id/apellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="17"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permiso_razpn"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp">
        </TextView>
    <Spinner
        android:id="@+id/spinnerRazon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp">

    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fechaI"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

            </TextView>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/fechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="5">

                </EditText>
                <ImageButton
                    android:id="@+id/botonFechaI"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/imageButton"
                    >
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fechaF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

            </TextView>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/fechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="5">

                </EditText>

                <ImageButton
                    android:id="@+id/botonFechaF"
                    android:backgroundTint="@color/imageButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:src="@android:drawable/ic_menu_my_calendar">

                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horaI"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

            </TextView>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/horaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="5">

                </EditText>
                <ImageButton
                    android:id="@+id/botonHoraI"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/imageButton">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horaF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">

            </TextView>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/horaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="5">
                </EditText>
                <ImageButton
                    android:id="@+id/botonHoraF"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/imageButton">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enviar"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/boton"
        android:textColor="@color/white">
    </Button>
</LinearLayout>
